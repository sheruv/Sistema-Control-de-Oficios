CREATE PROCEDURE [dbo].[Pa_Estado_INSERT] 
	
	--Parametros.
	@Id_Estado int,
	@Nom_Estado varchar(50)

AS
BEGIN
	BEGIN TRANSACTION

	SET
		@Id_Estado = (SELECT dbo.Fn_Siguiente_Codigo('Estado'))
	SET
		@Nom_Estado = (SELECT Nom_Estado FROM Estado)
				
	INSERT INTO Tipo_Usuario VALUES(@Id_Estado, @Nom_Estado)

	IF @@ERROR = 0
		BEGIN
		COMMIT TRANSACTION
		SELECT 'Registro ingresado correctamente'
		END
	ELSE
		BEGIN
		ROLLBACK TRANSACTION
		SELECT 'ERROR, Verifique los datos'
		END
END
GO
