/****** Object:  StoredProcedure [dbo].[Pa_Categoria_INSERT]    Script Date: 22/7/2019 7:46:22 p. m. ******/
SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO
-- =============================================
-- Author:		<Author,,Name>
-- Create date: <Create Date,,>
-- Description:	<Description,,>
-- =============================================
CREATE PROCEDURE [dbo].[Pa_Categoria_INSERT] 
	
	--Parametros.
	@Id_Categoria int,
	@Nom_Categoria varchar(50)

AS
BEGIN
	BEGIN TRANSACTION

	SET
		@Id_Categoria = (SELECT dbo.Fn_Siguiente_Codigo('Categoria'))
	SET
		@Nom_Categoria = (SELECT Nom_Categoria FROM Categoria)
				
	INSERT INTO Tipo_Usuario VALUES(@Id_Categoria, @Nom_Categoria)

	IF @@ERROR = 0
		BEGIN
		COMMIT TRANSACTION
		SELECT 'Registro ingresado correctamente'
		END
	ELSE
		BEGIN
		ROLLBACK TRANSACTION
		SELECT 'ERROR, Verifique los datos'
		END
END
GO
